//The following line launches chroe with remote debugging switched on
//google-chrome --remote-debugging-port=9222 --user-data-dir=remote-profile
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch localhost with sourcemaps",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000/",
			"sourceMaps": true,
			"webRoot": ""
		},
		{
			"name": "Attach",
			"type": "chrome",
			"request": "attach",
			"port": 9222
		}
	]
}
